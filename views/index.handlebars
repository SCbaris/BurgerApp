<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
			<img src="assets/img/burger1.png" alt="Burger App" height="200" width="200">
	        <h1>Burger App!</h1>
	        <br>
	    </div>
  </div>

  <div class="row">
    <div class="rs col-sm-6"> <!--Right side of page-->

    <br>
    <br>
    <h1>Fresh and Smokeeiieeeyy!</h1>
      <ul>
        {{#each burgers}} <!--for each burger members-->
          {{#unless this.devoured}} <!--if devoured is false-->
          <li>
            {{burger_name}}

            <button class="change-status" data-id="{{id}}" data-newstatus="{{devoured}}">
              EAT IT! <!--if devoured == false button will say "EAT IT"-->
            </button>

          </li>
          {{/unless}}
        {{/each}}
      </ul>


    </div>
    <div class="ls col-sm-6"> <!--Left side of page-->
    <br>
    <br>
    <h1>Already Eaten...</h1>
      <ul>
        {{#each burgers}} <!--for each burger members-->
          {{#if this.devoured}} <!--if devoured is true-->
          <li>
            {{burger_name}}
          </li>
          {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
  <div class="row">
    <div class="center col-sm-12">
      <br>
      <h3>Add a Burger</h3>
      <form class="create-form">
        <div class="form-group">
          <label for="burbur">Burger Name:</label>
          <input type="text" id="burbur" name="burger_name">
        </div>
        <button type="submit">Ready to Eat! RING!!</button>
      </form>
    </div>
  </div>
</div>